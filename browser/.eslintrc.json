{
	"env": {
		"browser": true,
		"es6": true,
		"node": false
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"globals": {
		"browser": true,
		"Buffer": true,
		"DELAYED": true
	},
	"overrides": [{
		"files": [ "browser.mjs", "service.js" ],
		"rules": { "no-console": "off" }
	}, {
		"files": [ "source/POLYFILLS.mjs" ],
		"rules": { "no-global-assign": "off", "no-undef": "off" }
	}],
	"rules": {
		"arrow-parens": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-unused-vars": [
			"error", {
				"varsIgnorePattern": "^(DELAYED|browser)$"
			}
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
