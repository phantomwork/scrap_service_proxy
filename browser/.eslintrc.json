{
	"env": {
		"browser": true,
		"es6": true,
		"node": false
	},
	"extends": "eslint:recommended",
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"globals": {
		"Buffer": true
	},
	"overrides": [{
		"files": [ "*.mjs" ],
		"rules": {}
	}, {
		"files": [ "bin/electron/application.js" ],
		"env": {
			"node": true
		}
	}, {
		"files": [ "bin/gjs/application.js" ],
		"globals": {
			"imports": true
		}
	}, {
		"files": [ "service.js" ],
		"rules": {
			"no-control-regex": "off",
			"no-console": "off"
		}
	}, {
		"files": [ "extern/base.mjs" ],
		"rules": {
			"no-undef": "off"
		}
	}],
	"rules": {
		"no-restricted-globals": [
			"error",
			{ "name": "console"         },
			{ "name": "location"        },
			{ "name": "URL"             },
			{ "name": "URLSearchParams" }
		],
		"arrow-parens": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-unused-vars": [
			"error", {
				"varsIgnorePattern": "^(BROWSER|WIDGETS)$"
			}
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
