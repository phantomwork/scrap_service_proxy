{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"overrides": [{
		"files": [ "extern/base.mjs" ],
		"rules": { "no-global-assign": "off", "no-undef": "off" }
	}, {
		"files": [ "source/node/console.mjs" ],
		"globals": {
			"isArray": true,
			"isBuffer": true,
			"isDate": true,
			"isFunction": true,
			"isNumber": true,
			"isObject": true,
			"isString": true
		}
	}, {
		"files": [ "source/MODULE.mjs" ],
		"globals": {
			"console": true,
			"Buffer":  true,
			"Emitter": true
		}
	}],
	"rules": {
		"arrow-parens": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-unused-vars": [
			"error", {
				"argsIgnorePattern": "^(assert)$"
			}
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
