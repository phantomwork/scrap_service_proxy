{
	"env": {
		"browser": false,
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"overrides": [{
		"files": [ "extern/base.mjs" ],
		"rules": { "no-global-assign": "off", "no-undef": "off" }
	}],
	"rules": {
		"arrow-parens": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-unused-vars": [
			"error", {
				"argsIgnorePattern": "^(assert)$"
			}
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
